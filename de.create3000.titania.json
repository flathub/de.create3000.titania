{
	"app-id": "de.create3000.titania",
	"runtime": "org.gnome.Platform",
	"runtime-version": "40",
	"sdk": "org.gnome.Sdk",
	"command": "titania",
	"finish-args": [
		"--device=dri",
		"--filesystem=home",
		"--share=ipc",
		"--share=network",
		"--socket=pulseaudio",
		"--socket=wayland",
		"--socket=x11",
		"--talk-name=org.gtk.vfs",
		"--talk-name=org.gtk.vfs.*",
		"--filesystem=xdg-run/gvfs",
		"--filesystem=xdg-run/gvfsd"
	],
	"cleanup": [
		"/include",
		"/lib/pkgconfig",
		"/share/aclocal",
		"/share/devhelp",
		"/share/doc",
		"/share/info",
		"/share/pkgconfig",
		"*.la",
		"*.a"
	],
	"cleanup-commands": [
		"update-mime-database /app/share/mime/",
		"gtk-update-icon-cache --ignore-theme-index /app/share/icons/hicolor/"
	],
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
	"add-extensions": {
		"org.freedesktop.Platform.ffmpeg-full": {
			"directory": "lib/ffmpeg",
			"add-ld-path": ".",
			"version": "20.08",
			"autodelete": false
		}
	},
	"modules": [
		{
			"name": "mm-common",
			"cleanup": [
				"/"
			],
			"sources": [
				{
					"type": "archive",
